@model HR.Web.Models.LookUp
    <style>
        #error {
            display: none;
            color: Red;
        }
    </style>
<div class="row">
    @Html.HiddenFor(x => x.LookUpID)
    @*@Html.HiddenFor(x => x.IsActive)*@
    <div class="form-group">
        <label class="col-md-4 control-label">
            <span class="pull-right">Designation</span>
        </label>
        @if (Model.LookUpID == -1)
        {
            <div class="col-md-8">
                @Html.TextBoxFor(x => x.LookUpCode,
            new { @class = "form-control input-sm uppercase", onblur = "checkDesignation(this)", @maxlength = "50" })
                <label id="error">Employee Designation Already Exists.</label>
            </div>
        }
        else
        {
            <div class="col-md-8">
            @Html.TextBoxFor(x => x.LookUpCode,
            new { @class = "form-control input-sm uppercase", @maxlength = "50" })
            @*<label id="error">Employee Designation Already Exists.</label>*@
        </div>
        }
        
    </div>
</div>
<div class="row css10">
    <div class="form-group">
        <label class="col-md-4 control-label">
            <span class="pull-right">Job Title</span>
        </label>
        <div class="col-md-8">
            @Html.TextAreaFor(x => x.LookUpDescription,
            new { @class = "form-control input-sm uppercase", @maxlength = "50" })
        </div>
    </div>
</div>
