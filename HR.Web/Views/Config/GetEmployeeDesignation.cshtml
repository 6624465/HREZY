<script type="text/javascript">
    $(document).ready(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_flat-blue',
            radioClass: 'iradio_flat-blue',
            increaseArea: '20%' // optional
        });
    });
    function checkDesignation(el) {
        $.ajax({
            url: '@Url.Content("~/Config/IsEmployeeDesignationExist?Designation=")' + $('#LookUpCode').val(),
            method: 'get',
            contentType: 'Json',
            success: function (result) {
                if (result == "True") {
                    $('#error').show();
                    $('#LookUpCode').val('');
                    $('#error').fadeOut(5000);
                }
                else {
                    $('#error').hide();
                }
            },
            error: function (err) {
                return result;
            }

        });
    }
</script>
 



