@model HR.Web.ViewModels.EmployeeVm

@section Styles{
    <style>
        #error {
            display: none;
            color: Red;
        }

        .icheckbox_flat-blue.checked.disabled {
            background-position: -22px 0;
        }

        .iradio_flat-blue.checked.disabled {
            background-position: -110px 0;
        }
        .panel-height{
            min-height:461px;
        }
